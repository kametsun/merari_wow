<style>
    .container {
        display: flex;
        justify-content: space-between;
        margin: 20% 10%;
    }
    .container img {
        width: 40vw;
    }
    #green {
        color: #7FA104;
        /* background: #7FA104;
        height: 40px;
        width: 40px;
        border-radius: 50%;
        -moz-border-radius: 50%;
        -webkit-border-radius: 50%;
        transform: translate(-250%,-250%); */
    }
    #yellow {
        color: #DF5A0B;
    }
    .num {
        font-weight: bold;
        font-size: 24pt;
        margin-top: 25px;
    }
    .vote-button {
        background: #E25559;
        width: 50px;
        height: 30px;
        color: #fff;
        border: 0px solid #333;
        margin-top: 25px;
    }
    h1 {
        text-align: center;
    }
    .bg {
        background: #fff;
        border-radius: 6px;
        margin: 10vh 5vw 0 5vw;
        padding: 5vh;
    }
</style>

<%= render 'templates/header' %>
<div class="bg">
<h1>ユニフォーム人気投票</h1>

<% idx = 1%>
<% @votes.each do |vote|%>
    <div class="container">
        <% if idx % 2 == 0 %>
            <div id="yellow" class="num"><%= idx %></div>
        <% else %>
            <div id="green" class="num"><%= idx %></div>
        <% end %>
        <%= image_tag vote.image %>
        <%= form_with(model: vote, url: vote_create_path, method: :get, local: true) do |f| %>
            <%= f.submit "投票", class: "vote-button" %>
        <% end %>
    </div>
    <% idx += 1 %>
<% end %>
</div>