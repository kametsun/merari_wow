    }
</style>

<%= render 'templates/header' %>

<h1>ユニフォーム人気投票</h1>
<% idx = 1%>
<% @votes.each do |vote|%>
    <div class="container">
        <% if idx % 2 == 0 %>
            <div id="yellow" class="num"><%= idx %></div>
        <% else %>
            <div id="green" class="num"><%= idx %></div>
        <% end %>
        <%= image_tag vote.image %>
        <%= form_with(model: vote, url: vote_create_path, method: :post, local: true) do |f| %>
            <%= f.submit "投票する", class: "vote-button" %>
        <% end %>
    </div>
    <% idx += 1 %>
<% end %>