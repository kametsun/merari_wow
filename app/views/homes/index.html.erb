<%= render 'templates/header' %>

<style>
    html, body { min-height: 100%; }

    main {
        text-align: center;
    }
    
    a {
        color : inherit;
        text-decoration : none;
        position: relative;
    }

    a p {
        position: absolute;/*絶対配置*/
        color: white;/*文字は白に*/
        font-size: 40pt;
        top: 50%;
        left: 50%;
        -ms-transform: translate(-50%,-50%);
        -webkit-transform: translate(-50%,-50%);
        transform: translate(-50%,-50%);
        margin:0;
        padding:0;
    }
    
    .container {
        display: inline-flex;
        flex-direction: column;
        text-align: center;
        width: 100%;
        height: 96vh;
    }

    /* .button {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 50%;
        margin: 0 auto;
    } */

    a img {
        width: 55vw;
        height: 24vh;
        margin: 3vh 0vw
    }
</style>

<main>
    <div class="container">
        <%= link_to buys_index_path do %>
            <img src="/assets/button_bg.png">
            <p>購入</p>
        <% end %>
        <%= link_to votes_path do %>
            <img src="/assets/button_bg.png">
            <p>投票</p>
        <% end %>
        <%= link_to nfts_path do %>
            <img src="/assets/button_bg.png">
            <p>コレクション</p>
        <% end %>
    </div>
</main>